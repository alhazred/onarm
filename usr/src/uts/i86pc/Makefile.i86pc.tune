##
## This makefile contains the common definitions to support build time
## tunable parameters for i86pc platform.
##

ARCH_TUNE_DIR			= $(UTSTREE)/intel/tune
ARCH_MODTUNE			= $(ARCH_TUNE_DIR)/$(MODTUNE)
ARCH_MODTUNE_DIR		= $(ARCH_TUNE_DIR)/$(OBJS_DIR)
ARCH_MODTUNE_CUR		= $(ARCH_MODTUNE_DIR)/$(MODTUNE).cur
ARCH_MODTUNE_H			= $(ARCH_MODTUNE_DIR)/$(MODTUNE).h
ARCH_UTSTUNE_CPPFLAGS		= -_gcc=-include -_gcc=$(ARCH_MODTUNE_H)
ARCH_UTSTUNE_AS_CPPFLAGS	= -_cpp=-include -_cpp=$(ARCH_MODTUNE_H)

MACH_TUNE_DIR			= $(UTSTREE)/i86pc/tune
MACH_MODTUNE			= $(MACH_TUNE_DIR)/$(MODTUNE)
MACH_MODTUNE_DIR		= $(MACH_TUNE_DIR)/$(OBJS_DIR)
MACH_MODTUNE_CUR		= $(MACH_MODTUNE_DIR)/$(MODTUNE).cur
MACH_MODTUNE_H			= $(MACH_MODTUNE_DIR)/$(MODTUNE).h
MACH_UTSTUNE_CPPFLAGS		= -_gcc=-include -_gcc=$(MACH_MODTUNE_H)
MACH_UTSTUNE_AS_CPPFLAGS	= -_cpp=-include -_cpp=$(MACH_MODTUNE_H)

# Import architecture and platform scope parameters.
MODTUNE_ARCH_SCOPE	= intel
MODTUNE_PLAT_SCOPE	= i86pc
MODTUNE_SCOPE		= --import=$(MODTUNE_ARCH_SCOPE)
MODTUNE_SCOPE		+= --import=$(MODTUNE_PLAT_SCOPE)
MODTUNE_CFLAGS		+= $(MODTUNE_SCOPE) --platform=$(MODTUNE_PLAT_SCOPE)
