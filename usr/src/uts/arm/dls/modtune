##
## Definitions of tunable parameters for ARM architecture.
##

#
# Use vlan interface
#
option boolean DLS_NOUSE_VLAN_IF
{
	default:	true;
	description:	"This parameter determines whether vlan management "
			"interface is available or not.\n"	
			"If this option is false, you can use vlan management "
			"interface.";
}

#
# Use door interface
#
option boolean DLS_NOUSE_DOOR_IF
{
	default:	true;
	description:	"This parameter determines whether door interface "
			"is available or not.\n"	
			"If this option is false, you can use door interface.";
}

#
# Use zone interface
#
option boolean DLS_NOUSE_ZONE_IF
{
	default:	true;
	description:	"This parameter determines whether zone interface "
			"is available or not.\n"	
			"If this option is false, you can use zone interface.";
}

#
# Use link renaming interface
#
option boolean DLS_NOUSE_RENAME_IF
{
	default:	true;
	description:	"This parameter determines whether link renaming "
			"interface is available or not.\n"	
			"If this option is false, you can use link renaming "
			"interface.";
}
