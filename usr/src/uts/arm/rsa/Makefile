## This makefile drives the production of the RSA kernel module.
## ARM platform specific.

#
#	Path to the base of the uts directory tree (usually /usr/src/uts).
#
UTSBASE	= ../..
COM1_DIR = $(SRC)/common/bignum
COM2_DIR = $(SRC)/common/crypto/rsa

#
#	Define the module and object file sets.
#
MODULE		= rsa
OBJECTS		= $(RSAPROV_OBJS:%=$(OBJS_DIR)/%)
LINTS		= $(RSAPROV_OBJS:%.o=$(LINTS_DIR)/%.ln)
ROOTMODULE	= $(ROOT_CRYPTO_DIR)/$(MODULE)

RSAPROV_PSR_OBJS = bignum_arm.o bignum_arm_asm.o

#
#	Include common rules.
#
include $(UTSBASE)/arm/Makefile.arm

#	set signing mode
ELFSIGN_MOD	= $(ELFSIGN_CRYPTO)

#
#	Define targets
#
ALL_TARGET	= $(BINARY)
LINT_TARGET	= $(MODULE).lint
INSTALL_TARGET	= $(BINARY) $(ROOTMODULE)

#
# Linkage dependencies
#
LDFLAGS_NEEDED			= -Ncrypto/md5 -Ncrypto/sha2
$(__GNULD)LDFLAGS_NEEDED	=
LDFLAGS				+= -dy $(LDFLAGS_NEEDED)

CPPFLAGS	+= -I$(COM1_DIR) -I$(COM2_DIR)

#
#	Default build targets.
#
.KEEP_STATE:

def:		$(DEF_DEPS)

all:		$(ALL_DEPS)

clean:		$(CLEAN_DEPS)

clobber:	$(CLOBBER_DEPS)

lint:		$(LINT_DEPS)

modlintlib:	$(MODLINTLIB_DEPS)

clean.lint:	$(CLEAN_LINT_DEPS)

install:	$(INSTALL_DEPS)

#
#	Include common targets.
#
include $(UTSBASE)/arm/Makefile.targ

BIGNUMDIR = $(SRC)/common/bignum

include Makefile.$(CLASS)
